Import('*')

SOURCES = Split("""
    Account.cpp
    Character.cpp
    Configuration.cpp
    ConnectionHolder.cpp
    Database.cpp
    Die.cpp
    Game.cpp
    GameStatistics.cpp
    ListenerThread.cpp
    LogEvent.cpp
    Main.cpp
    Monster.cpp
    Server.cpp
    ServerApp.cpp
    ServerAppearance.cpp
    ServerEntity.cpp
    ServerFrame.cpp
    ServerLog.cpp
    ServerThread.cpp
""")

env = env.Copy(tools=['pyr_base', 'boostpython', 'python', 'expat', 'nspr',
                      'corona', 'wx'],
               toolpath=[Dir('#/toolspec').abspath])

server = env.Program('#/build/server', SOURCES)
Alias('server', server)
