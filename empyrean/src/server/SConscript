Import('base_env TOOLS')

SOURCES = Split("""
    Configuration.cpp
    ConnectionHolder.cpp
    Database.cpp
    Game.cpp
    ListenerThread.cpp
    LogEvent.cpp
    Main.cpp
    ServerApp.cpp
    ServerEntity.cpp
    ServerFrame.cpp
    ServerLog.cpp
    ServerThread.cpp
    World.cpp
""")

env = base_env.Copy()
for t in Split('PyrBase Expat NSPR Corona wxWindows'):
    TOOLS[t](env)

server = env.Program('#/build/server', SOURCES)
Alias('server', server)
