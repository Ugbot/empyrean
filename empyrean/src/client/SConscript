Import('base_env')
Import('SetupCal3D SetupCorona SetupFreeType SetupNSPR SetupSDL SetupGL')

SOURCES = [
    'Application.cpp',
    'Font.cpp',
    'GameState.cpp',
    'InputManager.cpp',
    'IntroState.cpp',
    'Main.cpp',
    'MenuState.cpp',
    'Model.cpp',
    'MultiTextureImage.cpp',
    'ParticleEmitter.cpp',
    'ParticleSystem.cpp',
    'PlayerEntity.cpp',
    'Profiler.cpp',
    'Renderer.cpp',
    'ResourceManager.cpp',
    'Scene.cpp',
    'SDLUtility.cpp',
    'ServerConnection.cpp',
    'Texture.cpp']

# if using extgl...
# SOURCES.append('extgl.c')

env = base_env.Copy()
tools = [SetupCal3D, SetupCorona, SetupFreeType, SetupNSPR, SetupSDL, SetupGL]
for t in tools:
    t(env)

env.Prepend(LIBS = ['base'])

env.Program('#/build/client', SOURCES)
